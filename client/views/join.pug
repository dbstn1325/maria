extends base.pug

block content
    if(errorMessage)
        span=errorMessage
    form(method="POST")
        input(placeholder="Userid", type="text", name ="userid")
        input(placeholder="Password", type="password", name="password1")
        input(placeholder="Username", type="text", name ="username")
        input(placeholder="Confirm Password", type="password", name="password2")
        input(type = "submit", value="Join")
    div
        span Already have an account? 
        a(href="/login") Log in now &rarr;